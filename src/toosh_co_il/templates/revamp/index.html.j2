<section id="about-text" class="flex flex-grow basis-auto flex-col lg:w-9/12">
  <div class="flex-grow basis-full"></div>
  <h1 id="dsgn" class="text-very-small font-narkiss underline lg:text-medium">toosh.dsgn</h1>
  <p id="p1" class="text-black-600 text-medium-small mt-2 font-narkiss uppercase blur-[0.04rem] contrast-200 lg:text-big">
    I'm <b>Itamar</b>, a freelance <b>Graphic/Motion Designer</b> from TLV.
  </p>
  <p
    id="p2"
    class="text-black-600 text-medium-small mt-6 font-narkiss uppercase blur-[0.04rem] contrast-200 lg:mt-20 lg:text-big"
  >
    Mainly focusing on <b>Motion Design, Video making & Animation</b>, but enjoy making and co-making all sorts of art and design.
  </p>
  <div class="basis-32 lg:basis-48"></div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", async () => {
    const logotext = document.getElementById("dsgn");
    logotext.classList.remove("underline");
    const paragraph = document.getElementById("p1");
    const paragraph2 = document.getElementById("p2");
    wrapCharactersWithSpans(logotext);
    wrapCharactersWithSpans(paragraph);
    wrapCharactersWithSpans(paragraph2);
    await underliner(logotext, 16);
    await typewriter(logotext, 30, 0, false);
    logotext.lastChild.classList.remove("blinking-cursor");
    await typewriter(paragraph, 8, 80);
    await bolden(paragraph, 8, 20);
    paragraph.lastChild.classList.remove("blinking-cursor");
    await typewriter(paragraph2, 8, 80);
    await bolden(paragraph2, 8, 20);
  });
</script>
