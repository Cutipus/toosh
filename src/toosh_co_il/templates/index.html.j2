<div id="self" class="grid h-full gap-4 overflow-auto px-4 py-4 md:grid-cols-4">
  {% for col in columns %}
    <div class="flex flex-col space-y-4">
      {% for project_name, size in col %}
        <div
          class="bg-svg cursor-pointer"
          hx-get="{{ url_for('image_modal_fragment', project_name=project_name) }}"
          hx-target="body"
          hx-swap="beforeend"
          style="aspect-ratio: {{ size[0] }} / {{ size[1] }};"
        >
          <img
            src="{{ url_for('static', filename='projects/' + project_name + '/preview.webp') }}"
            width="300"
            height="400"
            alt="{{ project_name }}"
            class="size-full opacity-0 transition-opacity duration-300"
            onload="this.classList.remove('opacity-0');"
          />
        </div>
      {% endfor %}
    </div>
  {% endfor %}
</div>
